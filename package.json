{
  "name": "docker-vm-manager",
  "version": "1.0.0",
  "description": "A desktop application for managing Docker containers on remote VMs via SSH",
  "main": "main.js",
  "scripts": {
    "start": "concurrently \"npm run start:react\" \"npm run start:electron\"",
    "start:react": "webpack serve --mode development",
    "start:electron": "wait-on http://localhost:3000 && electron .",
    "build:react": "webpack --mode production",
    "build": "npm run build:react && electron-builder",
    "build:win": "npm run build:react && electron-builder --win"
  },
  "author": "",
  "license": "ISC",
  "dependencies": {
    "date-fns": "^2.30.0",
    "dotenv": "^17.2.0",
    "electron-store": "^8.1.0",
    "react": "^18.2.0",
    "react-dom": "^18.2.0",
    "ssh2": "^1.15.0",
    "scp2": "^0.5.0"
  },
  "devDependencies": {
    "@babel/core": "^7.23.0",
    "@babel/preset-env": "^7.23.0",
    "@babel/preset-react": "^7.22.15",
    "babel-loader": "^9.1.3",
    "concurrently": "^8.2.1",
    "css-loader": "^6.8.1",
    "electron": "^28.0.0",
    "electron-builder": "^24.9.0",
    "html-webpack-plugin": "^5.5.3",
    "style-loader": "^3.3.3",
    "wait-on": "^7.0.1",
    "webpack": "^5.88.2",
    "webpack-cli": "^5.1.4",
    "webpack-dev-server": "^4.15.1"
  },
  "build": {
    "appId": "com.example.docker-vm-manager",
    "productName": "Docker VM Manager",
    "files": [
      "main.js",
      "preload.js",
      "dist/**/*",
      "package.json"
    ],
    "directories": {
      "buildResources": "resources",
      "output": "release"
    },
    "win": {
      "target": [
        "nsis",
        "portable"
      ],
      "icon": "resources/icon.ico"
    },
    "mac": null
  }
}
